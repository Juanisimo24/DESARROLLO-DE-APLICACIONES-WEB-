<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mongo DB - F1 test</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
    <img src="/images/StarLion.png" alt="lion brewery" />
    <h1>Welcome to my F1 DB</h1>
    <form action="/driver" method="post">
        <h2>Driver information</h2>
        <input type="text" name="num" id="num" placeholder="Number" />
        <input type="text" name="code" id="code" placeholder="Code" />
        <input type="text" name="name" id="name" placeholder="Name" />
        <input type="text" name="lname" id="lname" placeholder="Last name" />
        <br />
        <label for="dob">Date of birth: </label>
        <input type="date" name="dob" id="dob" />
        <label for="url">Biography URL: </label>
        <input type="url" name="url" id="url" />
        <br />
        <label for="nation">Nationality: </label>
        <select name="nation" id="nation">
            <% nations.forEach(nation => { %>
                <option value="<%= nation.code %>"><%= nation.label %></option>
            <% }) %>
        </select>
        <label for="team">Team: </label>
        <select name="team" id="team">
            <% teams.forEach(team => { %>
                <option value="<%= team._id %>"><%= team.name %></option>
            <% }) %>
        </select>
        <p> <input type="submit" /> </p>
    </form>

    <button onclick="toggleView()">Toggle View</button>
    <div id="driver-list">
        <% drivers.forEach(driver => { %>
            <div class="driver-item">
                <strong><%= driver.forename %> <%= driver.surname %></strong> - Team: <%= driver.team.name %>
                <button onclick="editDriver('<%= driver._id %>')">Edit</button>
            </div>
        <% }) %>
    </div>
    <div id="team-list" style="display: none;">
        <% teams.forEach(team => { %>
            <div class="team-item"><%= team.name %></div>
        <% }) %>
    </div>
</body>

<script>
  function toggleView() {
    document.getElementById("driver-list").style.display = (document.getElementById("driver-list").style.display === 'none') ? 'block' : 'none';
    document.getElementById("team-list").style.display = (document.getElementById("team-list").style.display === 'none') ? 'block' : 'none';
  }

  function editDriver(id) {
      // JavaScript code to edit a driver in the future
      alert("Editing driver " + id);
  }
</script>
</html>
